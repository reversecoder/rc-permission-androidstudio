<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/permission_status"
        android:layout_width="wrap_content"
        android:text=""
        android:layout_marginLeft="15dp"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/btn_permission_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Permission list"
        android:layout_centerInParent="true"/>

    <Button
        android:id="@+id/btn_single_permission"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/btn_permission_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Single permission"
        android:layout_centerInParent="true" />

    <Button
        android:id="@+id/btn_remove_permissions"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/btn_single_permission"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Remove permissions"
        android:layout_centerInParent="true" />


</RelativeLayout>
